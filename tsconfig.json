{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "esModuleInterop": true,
    "noEmit": true,
    "target": "esnext",
    "module": "es6",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "rootDir": ".",
    "declaration": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "*.js",
    "node_modules",
    "__tests__",
    "tests",
    "dist",
    "example",
    "doc",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
