{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "rootDir": "src",
    "allowJs": false,
    "isolatedModules": false,
    "declaration": true,
    "baseUrl": "./",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "publish.js",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "node_modules",
    "tests",
    "dist",
    "example",
    "doc"
  ]
}
